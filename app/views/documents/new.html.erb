<%= form_for @document do |f|%>
    <%= render 'shared/errors', object: @document %>
    <fieldset>
      <ol>
        <li class="required">
          <%= f.label :name %>
          <%= f.text_field :name, size: 40, autofocus: true %>
        </li>
        <li class="required">
          <%= f.label :attachment %>
          <%= f.file_field :attachment %>
        </li>
        </li>
      </ol>
      <p>
        <%= f.submit "Upload Attachment", class: "btn btn-primary" %>
      </p>
    </fieldset>
<% end %>